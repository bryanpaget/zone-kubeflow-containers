{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "ignoreDeps": [
    "k8scc01covidacr.azurecr.io/sas4c"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update VSCode extensions in Dockerfile",
      "fileMatch": ["^images/mid/Dockerfile$"],
      "matchStrings": [
        "code-server\\s+--install-extension\\s+(?<depName>[^@\\s]+)@(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "open-vsx",
      "packageNameTemplate": "{{depName}}",
      "versioningTemplate": "semver",
      "matchStringsStrategy": "any"
    }
  ],
  "hostRules": [
    {
      "host": "open-vsx.org",
      "url": "https://open-vsx.org/api"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["open-vsx"],
      "enabled": true,
      "rangeStrategy": "replace" // Keep this for future updates once config is valid
    }
  ]
}
