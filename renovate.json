{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update VSCode extensions installed via code-server",
      "fileMatch": ["^images/mid/Dockerfile$"],
      "matchStrings": [
        "code-server\\s+--install-extension\\s+(?<packageName>[^@\\s]+)@(?<currentValue>[0-9.]+)"
      ],
      "datasourceTemplate": "open-vsx",
      "versioningTemplate": "semver",
      "matchStringsStrategy": "any"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["open-vsx"],
      "enabled": true,
      "rangeStrategy": "bump"
    }
  ]
}
