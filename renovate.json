{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignoreDeps": ["k8scc01covidacr.azurecr.io/sas4c"],
  "dependencyDashboard": true,
  "regexManagers": [
    {
      "description": "Update VSCode extensions",
      "fileMatch": ["^images/mid/Dockerfile$"],
      "matchStrings": [
        "code-server\\s+--install-extension\\s+(?<depName>[^@\\s]+)@(?<currentValue>[\\w\\.\\-]+)"
      ],
      "datasourceTemplate": "visual-studio-marketplace",
      "versioningTemplate": "semver-coerced"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["visual-studio-marketplace"],
      "enabled": true,
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": ["cpptools-linux"],
      "enabled": false
    }
  ]
}
